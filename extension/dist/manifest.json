{
  "manifest_version": 3,
  "name": "AI Autocomplete",
  "version": "1.0.0",
  "description": "AI-powered text autocomplete for input fields",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
